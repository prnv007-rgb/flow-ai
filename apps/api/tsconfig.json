{
  "compilerOptions": {
    // Environment setup
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // Module resolution
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Best practices
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // These should remain disabled in API
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"]
}
