{
  "$schema": "https://vercel.com/schema.json",
  "version": 2,
  "buildCommand": "bun run build --filter=backend",
  "outputDirectory": "apps/backend/dist",
  "installCommand": "bun install",
  "builds": [
    {
      "src": "apps/backend/dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/backend/dist/index.js"
    }
  ]
}