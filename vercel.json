{
  "$schema": "https://vercel.com/schema.json",
  "buildCommand": "bun install && bun run build",
  "installCommand": "bun install",
  "outputDirectory": "apps/web/.next",
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/api/dist/index.js"
    }
  ]
}
